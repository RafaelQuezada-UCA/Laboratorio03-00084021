<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cash_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="0"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/cantidad_de_dinero"
        android:textSize="@dimen/title2_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cash_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/five_cents_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_heigth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ten_cents_image_view"
        app:layout_constraintTop_toTopOf="@+id/ten_cents_image_view"
        android:src="@drawable/five_cents" />

    <ImageView
        android:id="@+id/one_dollar_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_heigth"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/quarter_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_text_view"
        android:src="@drawable/one_dollar" />

    <ImageView
        android:id="@+id/quarter_image_view"
        android:layout_width="@dimen/image_heigth"
        android:layout_height="@dimen/image_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one_dollar_image_view"
        app:layout_constraintTop_toTopOf="@+id/one_dollar_image_view"
        android:src="@drawable/quarter" />

    <ImageView
        android:id="@+id/ten_cents_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_heigth"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:src="@drawable/ten_cents" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/_1_00"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/one_dollar_image_view"
        app:layout_constraintStart_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/one_dollar_image_view" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/_0_25"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/quarter_image_view"
        app:layout_constraintStart_toStartOf="@+id/quarter_image_view"
        app:layout_constraintTop_toBottomOf="@+id/quarter_image_view" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/_0_10"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_image_view" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/_0_05"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintEnd_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintStart_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>